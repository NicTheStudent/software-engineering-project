<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="REKO.DetailedOrder">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="{Binding Order.Offer.Product}"
                FontSize="Large"  
                HorizontalOptions="Center"  
                VerticalOptions="Center" FontAttributes="Bold" Scale="1.5" Rotation="0" RotationX="0" TranslationY="10" TranslationX="0" TextColor="#5041BC">

            </Label>

            <Label Text="{Binding Order.Offer.Name}" HorizontalOptions="Center" TranslationY="10" FontSize="Large" />

            <StackLayout Orientation="Horizontal" TranslationX="15" TranslationY="15">
                <Label Text="Ordernummer: " FontAttributes="Bold" FontSize="Medium" TextColor="#5041BC"/>
                <Label Text="{Binding Order.OrderNumber}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" TranslationX="15" TranslationY="15">
                <Label Text="Pris: " FontAttributes="Bold" FontSize="Medium" TextColor="#5041BC"/>
                <Label Text="{Binding Order.Offer.Price}" FontSize="Medium"/>
                <Label Text="kr /" FontSize="Medium" />
                <Label Text="{Binding Order.Offer.Unit}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" TranslationX="15" TranslationY="15">
                <Label Text="BestÃ¤llda: " FontAttributes="Bold" FontSize="Medium" TextColor="#5041BC"/>
                <Label Text="{Binding Order.Amount}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" TranslationX="15" TranslationY="15">
                <Label Text="Totalsumma: " FontAttributes="Bold" FontSize="Large" TextColor="#5041BC" />
                <Label Text="{Binding Order.OrderSum}" FontSize="Large" />
                <Label Text="kr" FontSize="Large" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>