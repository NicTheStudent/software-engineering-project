<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="REKO.LoginPage" Title="REKO-Ringen">
    <ContentPage.Content>
      
        <!-- Layout for the loginpage --> 
        <StackLayout>
            <Label x:Name="Lbl_Anvnamn" Text="Användarnamn" TextColor="#296600"/>
            <Entry x:Name="Ent_Anvnamn" Placeholder="Användarnamn"/>
           
            
            <Label x:Name="Lbl_Lösen" Text="Lösenord" TextColor="#296600"/>
            <Entry x:Name="Ent_Lösen" Placeholder="Lösenord" IsPassword="true"/>
            
            
            <Button x:Name="Btn_Login" Text="Logga in" 
                    Clicked="LoginClicked"
                    BackgroundColor="#47b300"/>
            <Image Source="Icon.png"></Image>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
