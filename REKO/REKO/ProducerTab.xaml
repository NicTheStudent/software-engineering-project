<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REKO.ProducerTab"
             Title="Producenter"
             Icon="Producer.png">
    <ContentPage.Content>
       
        
        <ListView x:Name="ProducerListView"  
             HasUnevenRows="True"  
             ItemTapped="ProducerListView_ItemTapped">



            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
                        ImageSource="{Binding ImagePath}"
                        Text="{Binding Name}"
                        Detail ="{Binding ShortDescription}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            
        </ListView>
    </ContentPage.Content>
</ContentPage>